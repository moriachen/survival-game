  <div id="count">0</div>
  <button onclick="inc()">+1</button>
  <button onclick="dec()">-1</button>

  <script>
    let count = 0;
    function render() {
      document.getElementById("count").innerText = count;
    }
    function inc() { count++; render(); }
    function dec() { count--; render(); }
  </script>
